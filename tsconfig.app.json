{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "compilerOptions": {
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@test/*": ["./test/*"]
        },
        "types": ["node", "vite/client"],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "src/**/*.vue", "test/**/*.ts"]
}
